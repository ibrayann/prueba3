---
interface Props {
  title: string;
  description: any;
  to: string;
}

const { title, description, to } = Astro.props;
---

<a
  href={`/${to}`}
  class="flex max-w-3xl mx-auto lg:p-6 hover:scale-105 transform transition duration-300 ease-in-out"
>
  <div class="text-ellipsis w-11/12">
    <h2 class="text-2xl font-bold mb-2 line-clamp-2">{title}</h2>
    <p class="text-gray-500 text-base line-clamp-2">{description}</p>
  </div>
  <div class="flex justify-end my-auto"></div>
</a>

